<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.foodle.app.Dao.UserMapper">
    <select id="selectOneIdPassword" parameterType="UserDto" resultType="UserDto">
        SELECT id , password
        FROM user
        WHERE id = #{id} and password = #{password}
    </select>

    <select id="selectOneId" parameterType="String" resultType="String">
        SELECT id
        FROM user
        WHERE id = #{id}
    </select>

    <select id="selectListPassword" parameterType="String" resultType="String">
        SELECT password
        FROM user
        WHERE password = #{password}
    </select>

    <delete id="deleteOneUser" parameterType="UserDto">
        DELETE FROM user
        WHERE id = #{id} and password = #{password}
    </delete>

    <delete id="deleteTestUser">
        DELETE FROM user
        WHERE name LIKE 'test%';
    </delete>

    <insert id="insertUserInfo" parameterType="UserDto">
        INSERT INTO user (name,age,id,password,email,birthday,user_num)
        VALUES (#{name},#{age},#{id},#{password},#{email},#{birthday},#{user_num});
    </insert>
</mapper>